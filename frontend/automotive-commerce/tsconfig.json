{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "constants/**/*",
    "hooks/**/*",
    "context/**/*",
    "expo-env.d.ts",
    ".expo/types/**/*.ts"
  ]
}
